<launch>
  <arg name="enable_ekf" default="$(optenv ENABLE_EKF true)"/>
  <arg name="robot_no" default="" /> 

  <rosparam command="load" file="$(find jackal_control)/config/control$(arg robot_no).yaml" />

  <group if="$(optenv JACKAL_CONTROL_EXTRAS 0)" >
    <rosparam command="load" file="$(env JACKAL_CONTROL_EXTRAS_PATH)" />
  </group>

  <node name="controller_spawner$(arg robot_no)" pkg="controller_manager" type="spawner" 
        args="jackal_joint_publisher jackal_velocity_controller" />

  <group if="$(arg enable_ekf)" >
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization$(arg robot_no)" >
      <rosparam command="load" file="$(find jackal_control)/config/robot_localization$(arg robot_no).yaml" />
    </node>
  </group>

  <node pkg="twist_mux" type="twist_mux" name="twist_mux$(arg robot_no)" >
    <rosparam command="load" file="$(find jackal_control)/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="jackal_velocity_controller/cmd_vel"/>
  </node>

</launch>
